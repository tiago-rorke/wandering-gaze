<app>
	
	<!-- ============= APP ============= -->
	<!-- toggle serial comms -->
	<connectPlotter>0</connectPlotter> <!-- grbl -->
	<connectViewfinder>1</connectViewfinder> <!-- arduino in viewfinder -->

	<!-- to align page with plotter on viewfinder display -->
   <pageX>890</pageX>
   <pageY>190</pageY>
   <scaledPageWidth>895</scaledPageWidth>

	<!-- ========= OFFSET CALIBRATION ======== -->
   <offset>
	   <!-- calibration point position in scaled pixels --> 
	   <refX>510</refX>
	   <refY>500</refY>
	   <numSamples>50</numSamples>
	   <!-- max range of offset samples allowed to calculate avergage-->
	   <threshold>50</threshold>
	</offset>

	<!-- ========= INTERACTION ======== -->
	<!-- delay between finishing calibration and starting tracking -->
   <trackingStartDelay>1000</trackingStartDelay>
   <!-- pause before plotter starts moving in recorded mode -->
   <plotterStartDelay>2000</plotterStartDelay>
   <livetrackingMaxInterval>10</livetrackingMaxInterval>
   <livetrackingBufferDist>60</livetrackingBufferDist>
   <scrubSamples>50</scrubSamples>
   <scrubThreshold>500</scrubThreshold>
   <maxScrubDist>100</maxScrubDist>
   <fetchInterval>100</fetchInterval>
   <fetchWipeDistMax>200</fetchWipeDistMax>
   <fetchWipeDistMin>50</fetchWipeDistMin>

	<!-- ============= PLOTTER ============= -->
	<!-- soft limits -->
   <pageWidth>1035</pageWidth>
   <pageHeight>750</pageHeight>
   <grbl>
		<homing>0</homing>
		<killAlarm>1</killAlarm>
		<port>ttyUSB0</port>
		<baud>115200</baud>
		<feedrate>10000</feedrate>
		<acceleration>5000</acceleration>
		<!--<acceleration>500</acceleration>-->
		<invertY>1</invertY>
		<monitorSerial>1</monitorSerial>
		<!-- used during live tracking only -->
		<maxBufferDist>60</maxBufferDist>
	</grbl>

	<!-- ============= VIEWFINDER ============= -->
   <viewfinder>
		<port>ttyUSB0</port>
		<baud>115200</baud>
		<monitorSerial>0</monitorSerial>
		<ledBrightness>30</ledBrightness>
		<eyeBrightness>255</eyeBrightness>
	</viewfinder>

	<!-- ============= EYETRACKING ============= -->
	<input>
		<!-- mode, input 0 = live, 1 = video  -->
		<mode>0</mode>		
		<!-- if mode is video, choose file -->
		<videoFile>movies/ana.mp4</videoFile>
		
		<!-- camera settings -->
		<videoGrabber>		
			<!-- add a device id if you want -->
			<deviceId>0</deviceId>
			<!-- camera image dimensions -->
			<width>640</width>
			<height>480</height>
		</videoGrabber>
	</input>
	
</app>
